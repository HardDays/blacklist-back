{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "https://blacklist-back.herokuapp.com",
  "resourcePath": "ban_lists",
  "apis": [
    {
      "path": "/black_list.json",
      "operations": [
        {
          "summary": "Retrieve ban list",
          "parameters": [
            {
              "paramType": "query",
              "name": "limit",
              "type": "integer",
              "description": "Limit",
              "required": false
            },
            {
              "paramType": "query",
              "name": "offset",
              "type": "integer",
              "description": "Offset",
              "required": false
            },
            {
              "paramType": "header",
              "name": "Authorization",
              "type": "string",
              "description": "Authentication token",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "Ok"
            }
          ],
          "nickname": "BanLists#index",
          "method": "get"
        }
      ]
    },
    {
      "path": "/black_list.json",
      "operations": [
        {
          "summary": "Create new note in ban list",
          "parameters": [
            {
              "paramType": "form",
              "name": "item_type",
              "type": "string",
              "description": "Type of item",
              "required": true,
              "allowableValues": {
                "valueType": "LIST",
                "values": [
                  "employee",
                  "company"
                ]
              }
            },
            {
              "paramType": "form",
              "name": "name",
              "type": "string",
              "description": "Name",
              "required": true
            },
            {
              "paramType": "form",
              "name": "description",
              "type": "string",
              "description": "Description/Position",
              "required": true
            },
            {
              "paramType": "form",
              "name": "addresses",
              "type": "string",
              "description": "Work addresses/Addresses",
              "required": false
            },
            {
              "paramType": "form",
              "name": "text",
              "type": "string",
              "description": "Additional text",
              "required": false
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "Ok"
            },
            {
              "code": 403,
              "responseModel": null,
              "message": "Forbidden"
            }
          ],
          "nickname": "BanLists#create",
          "method": "post"
        }
      ]
    },
    {
      "path": "/black_list/{id}.json",
      "operations": [
        {
          "summary": "Retrieve ban list item",
          "parameters": [
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "Item id",
              "required": true
            },
            {
              "paramType": "header",
              "name": "Authorization",
              "type": "string",
              "description": "Authentication token",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 200,
              "responseModel": null,
              "message": "Ok"
            }
          ],
          "nickname": "BanLists#show",
          "method": "get"
        }
      ]
    }
  ],
  "authorizations": null
}